            android:key="switch_preference_1"
            android:title="Dark Mode" />

    </PreferenceCategory>
    <PreferenceCategory android:title="Other">

        <CheckBoxPreference
            android:defaultValue="false"
            android:key="check_box_preference_1"
            android:title="Check Me" />
    </PreferenceCategory>

</PreferenceScreen>
